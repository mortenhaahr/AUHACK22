<UserControl x:Class="GonnaCatchThemAll.MultiImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GonnaCatchThemAll"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="OuterGrid" MouseEnter="Show_MouseEnter" MouseLeave="Show_MouseLeave" Background="#fff">
        <Button x:Name="Left_btn" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="60" Background="#CC000000" BorderThickness="0" Panel.ZIndex="2" Visibility="Hidden" MouseEnter="Btn_MouseEnter" Click="Left_btn_Click" Foreground="#CCFFFFFF" FontSize="20" MouseLeave="Btn_MouseLeave"/>
        <Button x:Name="Right_btn" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="60" Background="#CC000000" BorderThickness="0" Panel.ZIndex="2" Visibility="Hidden" MouseEnter="Btn_MouseEnter"  Click="Right_btn_Click" Foreground="#CCFFFFFF" FontSize="20" MouseLeave="Btn_MouseLeave"/>
        <Image x:Name="Image_viewer" Panel.ZIndex="0" MouseEnter="Show_MouseEnter" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
    </Grid>
</UserControl>
